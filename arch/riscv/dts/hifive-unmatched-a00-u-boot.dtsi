#include "binman.dtsi"
#include "fu740-c000-u-boot.dtsi"
#include "fu740-hifive-unmatched-a00-ddr.dtsi"

/ {
	aliases {
		spi0 = &spi0;
		qspi0 = &qspi0;
	};

	memory@80000000 {
		u-boot,dm-spl;
	};

	config {
		/* second partition @2082*512 = 0x104400
		   see board/sifive/unmatched/genimage_spi-nor.cfg
		*/
		u-boot,spl-payload-offset = <0x104400>;
	};

	hfclk {
		u-boot,dm-spl;
	};

	rtcclk {
		u-boot,dm-spl;
	};

};

&clint {
	clocks = <&rtcclk>;
};

&qspi0 {
	flash@0 {
		u-boot,dm-spl;
	};
};

&spi0 {
	mmc@0 {
		u-boot,dm-spl;
	};
};

&gpio {
	u-boot,dm-spl;
};
